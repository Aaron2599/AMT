{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "cli:default",
    "clipboard-manager:default",
    "notification:default",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "clipboard-manager:allow-write-text",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-remove",
    "shell:default",
    "shell:allow-kill",
    "clipboard-x:default",
    "dialog:default",
    "shell:allow-execute",
    "shell:allow-spawn",
    {
      "identifier": "fs:scope",
      "allow": [
        "**"
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ffmpeg",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/ffmpeg",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ffprobe",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/ffprobe",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/yt-dlp",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/yt-dlp",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "store:default"
  ]
}