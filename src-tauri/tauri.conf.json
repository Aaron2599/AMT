{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agarthian Media Tools",
  "version": "0.1.1",
  "identifier": "com.aaron.AgarthianMediaTools",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "input",
          "index": 1
        }
      ]
    }
  },
  "app": {
    "windows": [
      {
        "title": "Agarthian Media Tools",
        "visible": false,
        "width": 450,
        "height": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe",
      "binaries/yt-dlp"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
